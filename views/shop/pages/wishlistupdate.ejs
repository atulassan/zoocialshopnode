<% include ../templates/shop-header %>
<section id="staic-page-banner" class="topCommonPadding">
	<div class="container">
		<div class="inner-page-banner-content">
			<div class="row">
				<div class="col-lg-12 col-md-12 my-auto">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="/">Home</a></li>
							<li class="breadcrumb-item active" aria-current="page">Wunschliste</li>
						</ol>
					</nav>
				</div>
			</div>
		</div>
	</div>
</section>
<section id="" class="inner-grey-bg pb-5 pt-4">
	<div class="container">
		<div class="form-row">
			<div class="col-lg-12 col-md-12">
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-12 min50vh">
						<div class="main-post-box white-bg br-6 p-15 mb-3 cart-table">
							<% if(utls.isEmpty(products)) { %>
								<h2>Wunschliste</h2>
								<div class="table-responsive">
									<table class="table mb-0" cellspacing="0">
										<thead>
											<tr>
												<th width="10%" class="product-thumbnail">Artikelbild</th>
												<th width="15%" class="product-instock">Artikelnr.</th>
												<th width="35%" class="product-name">Artikelname</th>
												<th width="15%" class="product-price">Preis</th>
												<th width="10%" class="product-price">Menge</th>
												<th width="10%" align="center" ></th>
												<th width="15%" align="center"></th>
											</tr>
										</thead>
										<tbody>

											
											<% products.forEach(function(product, el) { %>
											<tr class="wishlist-item">
												<td class=" product-image">
													<%
														var imgText = product.images[0].src.replace("/scaled/g", "");
													%>
													<a class="product-thumbnail" href="/product/<%= product.slug %>/<%= product.id %>">
														<img src="<%= utls.imageOptimize(product.images[0].src, "t") %>">
													</a>
												</td>
												<td class="product-stock">
													<span class="chf"><%= product.sku %></span>
												</td>
												<td class="product-name">
													<% if(product.tags.length > 0) { %>
														<div>
															<%= product.tags[0].name.replace(/&amp;/g, "&") %>
														</div>
													<% } %>
													<a href="/product/<%= product.slug %>/<%= product.id %>"><%= product.name %></a>
												</td>
												<td class="product-price">
													<span class="chf">CHF</span> <%= utls.priceFormat(product.price) %>
												</td>
												<td class="product-quantity add-tocart-grouped">
													<div class="cart-grouped">
														<select id="quantity" product-qty="1" class="cartqty quantity shopqty" product-id="<%= product.id %>" variation-id="" per-kilo="" kilo-gram="" name="quantity">	
															<% for(var i=1; i<=40; i++) { %>
																<option value="<%= i %>">
																	<%= i %>
																</option>
															<% } %>
															<option value="0">frei w√§hlbar</option>
														</select>
													</div>
												</td>
												<td align="center">
												<a product-qty="1" data-toggle="modal" data-target="#addtocart-add-confirm"
														variation-id="" product-id="<%= product.id %>"
														class="btn inner-gradient-bg addtocart favitem" href="javascript:;"><i
														class="fa fa-shopping-cart "></i></a>
												</td>
												<td class="product-remove">
													<a href="javascript:;" class="remove_wish"
													product-id="<%= product.id %>" title="Remove this item">&times;</a>
												</td>
											</tr>
											<% }); %>
											


										</tbody>
									</table>
								</div>
							<% } else { %>
								<div class="noProductListing">
									<img src="/images/noProductList.jpg" alt="">
									<h3>kein Eintrag vorhanden</h3>
								</div>
							<% } %>
							<div class="row mt-3">
								<div class="col-lg-6 col-md-6 col-sm-6 col-6">
									<a href="/" class="btn btn-primary btn-cart">weiter einkaufen</a>
								</div>
								<div class="col-lg-6 col-md-6 col-sm-6 col-6 text-right">
									<a href="/cart" class="btn btn-primary btn-cart">zum Warenkorb</a>
								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<% include ../templates/shop-footer %>