<% include ../templates/shop-header %>
<section id="" class="inner-grey-bg pb-5 pt-4 topCommonPadding">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12">
				<form id="registerform" method="post">
					<div class="row">
						<div class="col-md-12 mt-3">
							<h5>Lieferadresse</h5>
						</div>
						<div class="col-md-12 mt-3">
							<div class="form-group">
								<div class="radio form-check-inline" style="padding-left:10px;">
									<input id="diese" class="adresse_versenden" type="radio" name="adresse_versenden1"
										value="option2" checked="checked">
									<label for="diese">an diese Adresse versenden</label>
								</div>
							</div>
							<div class="form-group">
								<div class="radio form-check-inline" style="padding-left:10px;">
									<input id="andere" class="adresse_versenden" type="radio" name="adresse_versenden1"
										value="option1">
									<label for="andere">an eine andere Adresse versenden</label>
								</div>
							</div>
						</div>
					</div>
					<div class="billing_address">
						<p></p>
						<h3>Billing Details</h3>
						<p></p>
						<p><input type="text" name="first_name" placeholder="First Name" /></p>
						<p><input type="text" name="last_name" placeholder="Last Name" /></p>
						<p><input type="email" name="email" placeholder="Email" /></p>
						<p><input type="text" name="company" placeholder="company" /></p>
						<p><input type="text" name="address_1" placeholder="Address 1" /></p>
						<p><input type="text" name="address_2" placeholder="Address 2" /></p>
						<p><input type="text" name="city" placeholder="City" /></p>
						<p><input type="text" name="state" placeholder="State" /></p>
						<p><input type="text" name="postcode" placeholder="Postcode" /></p>
						<p><input type="text" name="phone" placeholder="Phone" /></p>
						<p><input type="text" name="username" placeholder="username Name" /></p>
					</div>
					<div class="shipping_address">
						<p></p>
						<h3>Shipping Details</h3>
						<p></p>
						<p><input type="text" name="first_name" placeholder="First Name" /></p>
						<p><input type="text" name="last_name" placeholder="Last Name" /></p>
						<p><input type="text" name="company" placeholder="company" /></p>
						<p><input type="text" name="address_1" placeholder="Address 1" /></p>
						<p><input type="text" name="address_2" placeholder="Address 2" /></p>
						<p><input type="text" name="city" placeholder="City" /></p>
						<p><input type="text" name="state" placeholder="State" /></p>
						<p><input type="text" name="postcode" placeholder="Postcode" /></p>
					</div>
					<p><input hidden="text" name="country" value="CH" /></p>
					<p><input type="submit" value="submit" /></p>
				</form>
			</div>
		</div>
	</div>
</section>
<% include ../templates/shop-footer %>