<% //console.log(categories); %>

<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light deskNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <!--Start-->
      <% if(utls.isEmpty(categories)) { %>
      <% categories.forEach(function(category, el) { %>
      <li class="nav-item dropdown megamenu">
        <a id="megamneu" href="/category/<%= category.slug %>/<%= category.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle "><%= category.name %></a>
        <% if(utls.isEmpty(category.children) && category.children.length > 0 ) { %>
        <div aria-labelledby="megamneu" class="dropdown-menu border-0 p-0 m-0">
          <div class="bg-white rounded-0 m-0 shadow-sm">
            <div class="col-lg-12">
              <div class="p-4">
                <div class="row">
                  <% category.children.forEach(function(childlevel1, el) { %>
                  <div class="col-lg-3">
                    <h6 class="font-weight-bold text-uppercase"><a href="/category/<%= childlevel1.slug %>/<%= childlevel1.id %>"><%= childlevel1.name %></a></h6>
                    <% if(utls.isEmpty(childlevel1.children) && childlevel1.children.length > 0 ) { %>
                    <ul>
                      <% childlevel1.children.forEach(function(childlevel2, el) { %>
                      <li class="nav-item">
                        <a href="/category/<%= childlevel2.slug %>/<%= childlevel2.id %>"><%= childlevel2.name %></a>
                      </li>
                      <% }); %>
                    </ul>
                    <% } %>
                  </div>
                  <% }); %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </li>
      <% }); %>
      <!--End-->
      <% } %>
    </ul>
  </nav>
</div>
